{
  "consul": "{{ if .CONSUL_AGENT }}localhost{{ else }}{{ .CONSUL }}{{ end }}:8500",
  "preStart": "/usr/local/bin/manage.sh preStart",
  "services": [
    {
      "name": "parse",
      "port": 80,
      "health": "/usr/bin/curl -o /dev/null --fail -s http://localhost/parse/health",
      "poll": 10,
      "ttl": 25
    }
  ],
  "backends": [
    {
      "name": "mongodb",
      "poll": 5,
      "onChange": "pkill -SIGHUP node"
    }
  ],
  "coprocesses": [{{ if .CONSUL_AGENT }}
    {
      "command": ["/usr/local/bin/consul", "agent",
                  "-data-dir=/data",
                  "-config-dir=/config",
                  "-rejoin",
                  "-retry-join", "{{ .CONSUL }}",
                  "-retry-max", "10",
                  "-retry-interval", "10s"],
      "restarts": "unlimited"
    }{{ end }}
  ],
  "telemetry": {
    "port": 9090,
    "sensors": [
      {
        "name": "parse_api_memory_percent",
        "help": "percentage of memory used",
        "type": "gauge",
        "poll": 5,
        "check": ["/usr/local/bin/sensor.sh", "memory"]
      },
      {
        "name": "parse_api_cpu_load",
        "help": "cpu load",
        "type": "gauge",
        "poll": 5,
        "check": ["/usr/local/bin/sensor.sh", "cpu"]
      }
    ]
  }
}
